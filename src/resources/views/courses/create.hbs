<div class="p-4">
  <h2>Đăng khóa học</h2>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label>Tên khóa học</label>
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Nhập tên khóa học"
      />
    </div>
    <div class="form-group">
      <label>Mô tả</label>
      <input
        type="text"
        name="description"
        class="form-control"
        placeholder="Nhập mô tả"
      />
    </div>
    <div class="form-group">
      <label>Video ID</label>
      <input
        type="text"
        name="vidId"
        class="form-control"
        placeholder="Nhập video ID"
      />
    </div>
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>
