<div class="mt-4">
  <h2>Cập nhật khóa học</h2>
  <form method="POST" action="/courses/{{_id}}?_method=PUT">
    <div class="form-group">
      <label>Tên khóa học</label>
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Nhập tên khóa học"
        value="{{name}}"
      />
    </div>
    <div class="form-group">
      <label>Mô tả</label>
      <input
        type="text"
        name="description"
        class="form-control"
        placeholder="Nhập mô tả"
        value="{{description}}"
      />
    </div>
    <div class="form-group">
      <label>Video ID</label>
      <input
        type="text"
        name="vidId"
        class="form-control"
        placeholder="Nhập video ID"
        value="{{vidId}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>
